<Page x:Class="clinic.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:clinic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Blue" Height="80" Margin="0,0,0,210"></Border>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="250,140,0,92" TextWrapping="Wrap" Text=""  Width="255" Height="28"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="250,190,0,42" TextWrapping="Wrap" Text=""  Width="255" Height="28"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="305,270,0,-15" Height="35" Width="150" FontSize="20" FontFamily="Berlin Sans FB Demi" Click="Button_Click" />
    </Grid>


</Page>
